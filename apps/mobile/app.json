{
  "expo": {
    "name": "LigtasCommute",
    "slug": "ligtascommute",
    "scheme": "ligtascommute",
    "owner": "z4mier",
    "version": "1.0.0",
    "orientation": "portrait",
    "jsEngine": "hermes",

    "extra": {
      "EXPO_PUBLIC_API_URL": "http://192.168.1.7:4000",
      "eas": {
        "projectId": "b463af7c-519b-4029-a030-c3502629b963"
      }
    },

    "splash": {
      "image": "./assets/images/home-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F1B2B"
    },

    "assetBundlePatterns": ["**/*"],

    "plugins": [
      "expo-barcode-scanner",
      "expo-localization"
    ],

    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to scan driver QR codes.",
        "NSLocationWhenInUseUsageDescription": "We use your location to display nearby routes, destinations, and ETA."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDegIXVdcHXgls2avydsdWgSKFziyePLNY"
      }
    },

    "android": {
      "package": "com.z4mier.ligtascommute",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDegIXVdcHXgls2avydsdWgSKFziyePLNY"
        }
      }
    },

    "updates": {
      "enabled": false,
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },

    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
