{
  "expo": {
    "name": "LigtasCommute",
    "slug": "mobile",
    "scheme": "mobile",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "extra": {
      "EXPO_PUBLIC_API_URL": "https://ligtas-commute-api.onrender.com",
      "eas": {
        "projectId": "e2682048-86d7-4cbf-ae84-28e2a4e38751"
      }
    },
    "icon": "./assets/images/home-logo.png",
    "splash": {
      "image": "./assets/images/home-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F1B2B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "expo-localization"
    ],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to scan driver QR codes.",
        "NSLocationWhenInUseUsageDescription": "We use your location to display nearby routes, destinations, and ETA."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDegIXVdcHXgls2avydsdWgSKFziyePLNY"
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDegIXVdcHXgls2avydsdWgSKFziyePLNY"
        }
      },
      "package": "com.anonymous.mobile"
    }
  }
}
