{
  "expo": {
    "name": "mobile-driver",
    "slug": "mobile-driver",
    "scheme": "mobile-driver",
    "platforms": ["ios", "android", "web"],
    "version": "1.0.0",
    "orientation": "portrait",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0F1B2B"
    },
    "assetBundlePatterns": ["**/*"],
    "plugins": ["expo-barcode-scanner"],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to scan driver QR codes."
      }
    },
    "android": {
      "permissions": ["android.permission.CAMERA"]
    }
  }
}
