generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// No Prisma enums for SQLite.
// Keep role/vehicleType as strings; validate in code.

model User {
  id                 String   @id @default(cuid())
  fullName           String
  email              String?  @unique
  phone              String?  @unique
  password           String?
  role               String   @default("COMMUTER") // "ADMIN" | "COMMUTER" | "DRIVER"
  status             String   @default("active")
  mustChangePassword Boolean  @default(false)

  // Added for Settings/Profile
  address            String?
  language           String   @default("en") // "en" | "tl" | "ceb"

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  driverProfile      DriverProfile?
  commuterProfile    CommuterProfile?
}

model DriverProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])

  licenseNo    String
  birthDate    DateTime
  address      String
  vehicleType  String   // "AIRCON" | "NON_AIRCON"
  busNo        String
  vehiclePlate String
  driverIdNo   String
  route        String
  qrToken      String   @unique
  status       String   @default("offline")
}

model CommuterProfile {
  id      String @id @default(cuid())
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
  points  Int    @default(0)
}

model Otp {
  id        String   @id @default(cuid())
  phone     String
  code      String
  expiresAt DateTime
  consumed  Boolean  @default(false)
  createdAt DateTime @default(now())
}
